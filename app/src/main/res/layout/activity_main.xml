<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment_sample"
        android:name="com.sample.egiwon.androidlifecycletest.SampleFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_sample" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_startactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onShowActivity"
        android:text="start Activity"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_sample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_sample"
        app:layout_constraintVertical_bias="0.354" />

</androidx.constraintlayout.widget.ConstraintLayout>